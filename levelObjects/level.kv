<Wall>:
    canvas.before:
        Rectangle:
            size: root.width / self.nCols, root.height / self.nLines
            pos: root.width / self.nCols * self.x_grid, root.height / self.nLines * self.y_grid
            source: self.imagePath
        Color:
            rgba: 1, 1, 1, 0.8

<Apple>:
    canvas.before:
        Rectangle:
            size: root.width / self.nCols, root.height / self.nLines
            pos: root.width / self.nCols * self.x_grid, root.height / self.nLines * self.y_grid
            source: "img/apple.png"